        <script>
            $(function() {
                $('.search-flight').on('click', function(e) {
                    e.preventDefault();

                    var data = {};

                    data['origin'] = $('#origin').val();
                    data['destination'] = $('#destination').val();
                    data['departure'] = $('#checkin').val() + '/19';
                    data['arrival'] = $('#checkout').val() + '/19';
                    data['seats'] = parseInt($('#passengers').val());

                    if (!data['origin'] || !data['destination'] || !data['departure'] || !data['arrival'] || !data['seats']) {
                        return toastr.error('Enter required info for correct matches');
                    }

                    if (!data['seats']) {
                        return toastr.error('Select number of seats to book for');
                    }

                    window.location.href = location.protocol + '//' + location.host + '/search-results?origin=' + data['origin'] + '&destination=' + data['destination'] + '&departure=' + data['departure'] + '&arrival=' + data['arrival'] + '&seats=' + data['seats'];
